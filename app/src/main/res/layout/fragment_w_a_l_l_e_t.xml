<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="23dp"
    tools:context=".WALLET">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_gravity="center"
        android:background="#BF394A44"
        android:orientation="vertical"
        android:padding="7dp">

    <!-- TODO: Update blank fragment layout -->
        <EditText
            android:id="@+id/withdrawMoneyEditTextId"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Withdrawal Amount"
            android:textColorHint="#C1FBE6E6" />

        <EditText
            android:id="@+id/availableAmountEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Available Amount"
            android:textColorHint="#C1FBE6E6" />

        <EditText
            android:id="@+id/addAmountEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Add Amount"
            android:textColorHint="#C1FBE6E6" />

        <Button
            android:id="@+id/updateButtonId"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Update"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="15sp" />

        <Button
            android:id="@+id/addMoneyButtonId"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Add Money"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="15sp" />

        <Button
            android:id="@+id/withdrawButtonId"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Withdraw"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />



    </LinearLayout>



</FrameLayout>