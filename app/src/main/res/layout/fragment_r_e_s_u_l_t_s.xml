<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="23dp"
    tools:context=".RESULTS">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:background="#BF394A44"
        android:orientation="vertical"
        android:padding="7dp">

        <!-- TODO: Update blank fragment layout -->
        <EditText
            android:id="@+id/cardNumberEditTextId"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#C1FBE6E6"
            android:hint="Enter Card Number" />

        <RadioGroup
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicken"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                />


        </RadioGroup>

        <EditText
            android:id="@+id/rankEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#C1FBE6E6"
            android:hint="Rank" />

        <EditText
            android:id="@+id/winnerNameEditTextId"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#C1FBE6E6"
            android:hint="Winner Name" />

        <EditText
            android:id="@+id/killsEditTextId"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#C1FBE6E6"
            android:hint="Kills" />

        <EditText
            android:id="@+id/prizeAmountEditTextId"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#C1FBE6E6"
            android:hint="Prize Amount" />

        <Button
            android:id="@+id/updateButtonId"
            android:text="Update"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            android:shadowRadius="5"
            />


    </LinearLayout>




</FrameLayout>